<% content_for(:title) do %>
  Login
<% end %>
<% content_for(:logo) do %>
  &#129044;
<% end %>

<section class="container min-w-screen min-h-screen w-full bg-gray-200 flex flex-col items-center justify-start py-5">
 <div class="bg-white text-gray-800 shadow-lg overflow-hidden flex">
 <div class="bg-white h-full w-full px-5 pt-6 pb-20 overflow-y-auto">
  <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password",  placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>


 </div>

 </div>
<%= render "devise/shared/links" %>
</section>